@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "Sign In";
}

<div class="container mt-md-5 offset-md-4">
        <h2 class="form-signin-heading">Sign in</h2>

        <div class="form-group">

            <label for="inputEmail" class="sr-only">Email address</label>
            <input type="text" name="userName" id="name" tabindex="1" class="form-control" placeholder="User name">
        </div>

        <div class="form-group">
            <label for="inputPassword" class="sr-only">Password</label>
            <input type="password" name="password" id="password" tabindex="2" class="form-control" placeholder="Password">
        </div>
        <div class="form-group">
            <div class="row">
                <div class="col-md-6 col-md-offset-3">
                    <input type="submit" name="signin-submit" tabindex="4" class="form-control btn btn-primary signin" value="Sign In">
                </div>
            </div>
        </div>
        <div class="validation"></div>
</div> 

<script src="~/Scripts/SignIn.js"></script>
<script>
    $(document).ready(function () {
        var sign = new SignIn('@ViewBag.RegUrl');
        sign.init();
    });
</script>
