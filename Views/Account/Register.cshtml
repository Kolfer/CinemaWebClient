@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "Registration";
}

<div class="container mt-md-5 offset-md-4">

        <h2 class="form-signin-heading">Register</h2>
        <div class="form-group">
            <input type="text" name="UserName" id="username" tabindex="1" class="form-control" placeholder="User Name">
            <div class="valid-feedback"></div>
        </div>
        <div class="form-group">
            <input type="email" name="email" id="email" tabindex="2" class="form-control" placeholder="Email Address">
            <div class="valid-feedback"></div>
        </div>
        <div class="form-group">
            <input type="password" name="password" id="password" tabindex="3" class="form-control" placeholder="Password">
            <div class="valid-feedback"></div>
        </div>
        <div class="form-group">
            <input type="password" name="confirmPassword" id="confirm-password" tabindex="4" class="form-control" placeholder="Confirm Password">
            <div class="valid-feedback"></div>
        </div>
        <div class="form-group">
            <input type="text" name="country" id="country" tabindex="5" class="form-control" placeholder="Enter country">
            <div class="valid-feedback"></div>
        </div>
        <div class="form-group">
            <input type="text" name="city" id="city" tabindex="6" class="form-control" placeholder="Enter city" />
            <div class="valid-feedback"></div>
        </div>
        <div class="form-group">
            <select name="gender" id="gender">
                <option>Unknow</option>
                <option>Female</option>
                <option>Male</option>
            </select>
            <div class="valid-feedback"></div>
        </div>
        <div class="form-group">
            <div class="row">
                <div class="col-md-6 col-md-offset-3">
                    <input type="submit" tabindex="4" class="form-control btn btn-primary register-submit" value="Register">
                </div>
            </div>
        </div>
        <div class="validation">
        </div>
</div>



<script src="/Scripts/Register.js"></script>
<script>
    $(document).ready(function () {
        var register = new Register('@ViewBag.RefUrl');
        register.init();
    });
</script>